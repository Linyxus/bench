#!/usr/bin/env bash

# poll github to check performance commands

if [ -z "$PROG_HOME" ] ; then
  ## resolve links - $0 may be a link to PROG_HOME
  PRG="$0"

  # need this for relative symlinks
  while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
    else
      PRG="`dirname "$PRG"`/$link"
    fi
  done

  saveddir=`pwd`

  PROG_HOME=`dirname "$PRG"`/..

  # make it fully qualified
  PROG_HOME=`cd "$PROG_HOME" && pwd`

  cd "$saveddir"
fi

############# Error

function report {
  message="polling service exception

polling service exception"

  ghi open -m "$message" -- $MONITOR_REPO

  exit 1
}

# trap report INT TERM EXIT
trap report EXIT

############# Config
cd $PROG_HOME
source bin/config

############# Variables

USERS=(odersky DarkDimius felixmulder smarter nicolasstucki liufengyun OlivierBlanvillain)
REPO=lampepfl/dotty
# REPO=liufengyun/bench
LAST_POLL=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

comment() {
  pr=$1
  files=$(ls jobs/*.job 2> /dev/null) # don't use `(jobs/*.job)` for array, it doesn't work in tmux
  total=$(echo $files | wc -w)
  message="performance test scheduled: $total jobs in total."

  ghi comment $pr -m "$message"  -- $REPO
}

############## Polling
while true; do
  output=/tmp/poll-comments
  wget https://api.github.com/repos/$REPO/issues/comments?since=$LAST_POLL -O $output
  LAST_POLL=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

  pulls=$(cat $output | jq -r '.[] | select((.body | contains("test performance please")) and (.html_url | contains("pull")) )  | .html_url')

  while IFS= read -r line; do
    if [ "$line" != "" ]; then
      # https://github.com/lampepfl/dotty/pull/2970#issuecomment-321860528
      pr=$(echo $line | sed 's/^.*pull\/\([0-9]\+\)#.*/\1/')
      if [[ "$pr" =~ ^[0-9]+$ ]]; then
        echo "bin/pull $pr" > jobs/pull-$pr.job
        comment $pr
      fi
    fi
  done <<< "$pulls"

  if [ -f stop-poll ]; then
    trap '' EXIT
    echo "stop polling"
    exit 0
  fi

  sleep $POLL_SLEEP
done
