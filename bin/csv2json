#!/usr/bin/env bash

# csv2json history.csv


str_field() {
  echo "\"$1\": \"$2\","
}

num_field() {
  echo "\"$1\": $2,"
}

obj_echo() {
  IFS=, read key pr time commit avg error test_time warmups runs <<< "$1"

  trim_key=$(trim "$key")
  trim_time=$(trim "$time")
  trim_commit=$(trim "$commit")

  echo "{"
    str_field "key" "$trim_key"
    num_field "pr" "$pr"
    str_field "time" "$trim_time"
    str_field "commit" "$trim_commit"
    num_field "avg" "$avg"
    num_field "error" "$error"
    echo "\"warmups\": [ $(echo $warmups | sed -r 's/ +/, /g') ],"
    echo "\"runs\": [ $(echo $runs | sed -r 's/ +/, /g') ]"
  echo "}"
}

trim() {
  echo -e "$1" | sed -e 's/^[[:space:]]*//' -e 's/[[:space:]]*$//'
}

readarray data < $1

# get length of an array
len=${#data[@]}

echo "["

for (( i=0; i<$(($len-1)); i++ ));
do
  line=${data[$i]}
  obj_echo "$line"
  echo ","
done

obj_echo "${data[(($len-1))]}"

echo "]"