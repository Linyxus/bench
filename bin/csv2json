#!/usr/bin/env bash

# csv2json history.csv


str_field() {
  echo "\"$1\": \"$2\","
}

num_field() {
  echo "\"$1\": $2,"
}

obj_echo() {
  IFS=, read key pr time commit avg error confidence test_time <<< "$1"

  echo "{"
    str_field "key" "$key"
    num_field "pr" "$pr"
    str_field "time" "$time"
    str_field "commit" "$commit"
    num_field "avg" "$avg"
    num_field "error" "$error"
    echo "\"confidence\": \"$confidence\""
  echo "}"
}

readarray data < $1

# get length of an array
len=${#data[@]}

echo "["

for (( i=0; i<$(($len-1)); i++ ));
do
  line=${data[$i]}
  obj_echo "$line"
  echo ","
done

obj_echo "${data[(($len-1))]}"

echo "]"