#!/usr/bin/env bash

# runs every mid-night
# 0 0 * * * /data/workspace/bench/bin/cron&

set -eE

function report {
  ghi comment -m "cron failed" 4
}

trap report ERR

cd /data/workspace/bench
bin/schedule > logs/$(date +%m-%d).out 2>&1 < /dev/null
bin/deploy

git add history.csv
git commit -m "add data to history"
git push origim master:master


ghi comment -m "benchmark finished success $(date)" 4

