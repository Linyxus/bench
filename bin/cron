#!/usr/bin/env bash

# runs every mid-night
# 0 0 * * * /data/workspace/bench/cron&

set -eE

function report {
  ghi comment -m "cron failed" 4
}

trap report ERR

cd /data/workspace/bench
bin/schedule > logs/$(date +%m-%d).out 2>&1 < /dev/null
bin/deploy

ghi comment -m "benchmark finished success $(date)" 4

