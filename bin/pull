#!/usr/bin/env bash

set -eE

# usage: pull PR [-c COMMIT1:COMMIT2]
#
# PR             pull request number
#


############# Resolve directory

if [ -z "$PROG_HOME" ] ; then
  ## resolve links - $0 may be a link to PROG_HOME
  PRG="$0"

  # need this for relative symlinks
  while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
    else
      PRG="`dirname "$PRG"`/$link"
    fi
  done

  saveddir=`pwd`

  PROG_HOME=`dirname "$PRG"`/..

  # make it fully qualified
  PROG_HOME=`cd "$PROG_HOME" && pwd`

  cd "$saveddir"
fi

############## Error handling

function report {
  content=$(tail -n 20 $LOG)
  message="performance test failed:

```
$content
```

[check $LOG for more information]"

  ghi comment $PR -m "$message" -- $REPO
}

trap report ERR

############## Options
while getopts "c:" opt; do
  case $opt in
    c)
      COMMITS=$OPTARG
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      exit 1
      ;;
  esac
done

shift $((OPTIND-1))

############# Variables

PR=$1
FILE=$PROG_HOME/site/$PR/history.csv
LOG=$PROG_HOME/logs/pull-$PR-$(date +%m-%d-%H.%M).out
REPO=lampepfl/dotty

############## test
cd $PROG_HOME
source bin/common
source bin/config

# compile current project
sbt jmh:compile pack

# make sure folder for PR exists
mkdir -p site/$PR/

############# get PR info

output=/tmp/pull-$PR
wget https://api.github.com/repos/lampepfl/dotty/pulls/$PR -O $output

info=$(cat $output | jq '{ commit: .head.sha, author: .user.login, repo: .head.repo.full_name, branch: .head.ref }')
author=$(echo $info | jq -r '.author' )
last_commit=$(echo $info | jq -r '.commit' )
from_repo=$(echo $info | jq -r '.repo' )
from_branch=$(echo $info | jq -r '.branch' )

if [[ -z $COMMITS ]]; then
  COMMITS="$last_commit"
fi


cd dotty/

if [[ $from_repo == "dotty-staging/dotty" ]]; then
   remote_name="staging"
else
   remote_name="PR$PR"
   git remote add $remote_name https://github.com/$from_repo
fi

# get commits from github
git fetch $remote_name $from_branch
git fetch origin master

############ test commits

for origin_commit in $(echo $COMMITS | tr ":" "\n")
do
  # do a local merge
  commit_time=$(date -u +"%Y-%m-%dT%H:%M:%SZ")   # use current time so the point appear last

  cd $PROG_HOME/dotty
  git reset --hard origin/master
  git merge $origin_commit -m "merge PR #$PR commit $origin_commit with master" >> $LOG 2>&1
  commit=$(git rev-parse --short HEAD)

  prepare $commit

  cd $PROG_HOME
  test "$origin_commit" "$author" "$commit_time" "$PR" >> $LOG 2>&1
done

############## Deploy

# build web
cd web
git fetch origin
git merge origin/master
npm run build

# copy resource
cd ..
DEST_DIR="site/$PR"
mkdir -p $DEST_DIR
cp web/index.html $DEST_DIR
cp web/bundle.js $DEST_DIR
cp -r web/css $DEST_DIR

# build data
TEMP_FILE="/tmp/pull-$PR.csv"
cp $PROG_HOME/history.csv $TEMP_FILE
echo $FILE >> $TEMP_FILE

mkdir -p site/$PR/data
cp bin/charts.js site/$PR/data/charts.js
bin/csv2json $TEMP_FILE > site/$PR/data/dataset.json

# push to github
cd site
git add .
git commit -m "[bot]update site for pull request $PR"
git push origin gh-pages:gh-pages


message="Performance test finished successfully:

Visit $WEB_URL/$PR/ to see the changes.

Benchmarks is based on merge(s) with master"

ghi comment $PR -m "$message" -- $REPO

# clean up
cd $PROG_HOME

